<div class="container">
    <div class="row d-sm-flex d-none">
        <div class="col-12 f-white text-center f-40 font-weight-bold mt-5 mb-5">Личный кабинет</div>
        <div class="col-xl-4 col-lg-5 col-12 mb-lg-0 mb-3">
            <div class="box mx-sm-auto mb-sm-3">
                <div class="f-white ml-3 f-40">{{user.name}} {{user.secondName}}</div>
                <div class="box-images">
                    <img src="{{#if user.Character.image}}{{user.Character.image}}{{else}}/images/avatars/chooseImage.png{{/if}}" alt="avatar">
                </div>
            </div>
        </div>
        <div class="col-xl-7 col-lg-6 col-12 offset-lg-1 offset-0 mt-lg-0 mt-5">
            <div class="parameter-wrapper d-flex justify-content-between">
                <div class="parameter f-white f-32">Рост</div>
                {{#if user.Character.growth}}
                    <div class="value f-white f-32"><span class="value-digit">{{user.Character.growth}}</span> см</div>
                {{else}}
                    <div class="value f-white f-32"><span class="value-digit">--</span> см</div>
                {{/if}}
                <input class="d-none" name="growth" id="growth" type="number" value="{{user.Character.growth}}">
            </div>
            <div class="divider mb-3"></div>
            <div class="parameter-wrapper d-flex justify-content-between">
                <div class="parameter f-white f-32">Вес</div>
                {{#if user.Character.weight}}
                    <div class="value f-white f-32"><span class="value-digit">{{user.Character.weight}}</span> кг</div>
                {{else}}
                    <div class="value f-white f-32"><span class="value-digit">--</span> кг</div>
                {{/if}}
                <input class="d-none" name="weight" id="weight" type="number" value="{{user.Character.weight}}">
            </div>
            <div class="divider mb-3"></div>
            <div class="parameter-wrapper d-flex justify-content-between">
                <div class="parameter f-white f-32">Обхват груди</div>
                {{#if user.Character.bust}}
                    <div class="value f-white f-32"><span class="value-digit">{{user.Character.bust}}</span> см</div>
                {{else}}
                    <div class="value f-white f-32"><span class="value-digit">--</span> см</div>
                {{/if}}
                <input class="d-none" name="bust" id="bust" type="number" value="{{user.Character.bust}}">
            </div>
            <div class="divider mb-3"></div>
            <div class="parameter-wrapper d-flex justify-content-between">
                <div class="parameter f-white f-32">Обхват талии</div>
                {{#if user.Character.waist}}
                    <div class="value f-white f-32"><span class="value-digit">{{user.Character.waist}}</span> см</div>
                {{else}}
                    <div class="value f-white f-32"><span class="value-digit">--</span> см</div>
                {{/if}}
                <input class="d-none" name="waist" id="waist" type="number" value="{{user.Character.waist}}">
            </div>
            <div class="divider mb-3"></div>
            <div class="parameter-wrapper d-flex justify-content-between">
                <div class="parameter f-white f-32">Обхват бедер</div>
                {{#if user.Character.girth}}
                    <div class="value f-white f-32"><span class="value-digit">{{user.Character.girth}}</span> см</div>
                {{else}}
                    <div class="value f-white f-32"><span class="value-digit">--</span> см</div>
                {{/if}}
                <input class="d-none" name="girth" id="girth" type="number" value="{{user.Character.girth}}">
            </div>
            <div class="divider mb-3"></div>
            <div class="row justify-content-around">
                <button class="button edit-profile-img mb-3">Изменить фото</button>
                <button class="button edit-profile">Редактировать профиль</button>
                <button class="button save-profile d-none">Сохранить изменения</button>
            </div>
            <div class="profile-status mt-5">
                <div class="parameter-wrapper d-flex justify-content-between">
                    <div class="parameter f-white f-32">Уровень сложности:</div>
                    <div class="f-white f-32">новичок</div>
                </div>
                <div class="divider mb-4"></div>
                <div class="parameter-wrapper d-flex justify-content-between">
                    <div class="parameter f-white f-32">Дата:</div>
                    <div class="f-white f-32">12.12.2021/12.12.2022</div>
                </div>
                <div class="divider"></div>
            </div>
        </div>
    </div>
    <div class="row mt-5 mb-5 d-sm-flex d-none">
        <div class="col-12 progress p-0 mt-3">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
        </div>
    </div>
</div>

<div class="imageFormBox position-fixed animate__animated">
    <span class="imageFormBox-close position-absolute">x</span>
    <form action="/profile/edit-image" method="POST" enctype="multipart/form-data">
