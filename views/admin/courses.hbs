<div class="container min-vh-100 pt-5">
    <div class="row pt-5 admin-courses">
        <div class="col-12">
            <div class="row mb-3" id="tab1">
                <div class="col-md-10 offset-md-1 col-12 add-course-tab">
                    <div class="row">
                        <a class="col-9 add-course-tab-href">
                            <div class="row h-100">
                                <div class="col d-flex align-items-center">
                                    <div class="add-course-name">Добавить курс</div>
                                </div>
                            </div>
                        </a>
                        <div class="col-12 d-flex justify-content-center add-course-tab-body">
                            <form id="addCourse" action="/admin/courses/add-course" method="post" enctype="multipart/form-data" class="col-12">
                                <div class="row">
                                    <div class="form-group col-6">
                                        <div class="form-group">
                                            <label for="courseName">Название</label>
                                            <input type="text" name="courseName" id="courseName" class="form-control" placeholder="Название курса">
                                        </div>
                                        <div class="form-group">
                                            <label for="courseDuration">Длительность (кол-во дней)</label>
                                            <input type="number" name="courseDuration" id="courseDuration" class="form-control" placeholder="Длительность курса">
                                        </div>
                                        <div class="form-group">
                                            <label for="coursePrice">Стоимость</label>
                                            <input type="number" name="coursePrice" id="coursePrice" class="form-control" placeholder="Стоимость курса">
                                        </div>
                                    </div>
                                    <div class="form-group col-6">
                                        <div class="form-group">
                                            <label for="courseDescription">Описание</label>
                                            <textarea name="courseDescription" id="courseDescription" rows="7" class="form-control" placeholder="Описание курса"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group col-6 offset-3 d-flex justify-content-center">
                                        <input type="file" name="imageCourse" id="imageCourse" class="input-file">
                                        <label for="imageCourse" class="btn btn-tertiary js-labelFile w-75">
                                            <i class="icon fa fa-check"></i>
                                            <span class="js-fileName">Загрузить изображение</span>
                                        </label>
                                    </div>
                                    <div class="form-group col-4 offset-8 d-flex justify-content-end">
                                        <button type="submit" class="button-admin">
                                            Добавить
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{#if courses}}
            {{#each courses}}
                <div class="col-3 mb-3">
                    <div class="box-images">
                        <img src="{{img}}" alt="course-img">
                    </div>
                </div>
                <div class="col-5 offset-1">
                    <div class="row">
                        <h3 class="f-white">{{name}}</h3>
                    </div>
                    <div class="row">
                        <p class="f-white">Длительность: {{duration}} дней</p>
                    </div>
                    <div class="row">
                        <p class="f-white">{{description}}</p>
                    </div>
                </div>
                <div class="col-3">
                    <p class="f-white">{{price}} руб.</p>
                </div>
            {{/each}}
        {{else}}
            <div class="col-12">
                <h3 class="text-center f-white">Курсов нет</h3>
            </div>
        {{/if}}
    </div>
</div>

<div class="add-success position-fixed animate__animated">

</div>