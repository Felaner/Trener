<div class="container-fluid parallax min-vh-100 pt-5">
    <div class="row justify-content-center mt-3">
        <div class="login-form w-50">
            {{#if error}}
                <p class="alert">{{error}}</p>
            {{/if}}
            <h3>Забыли пароль?</h3>
            <form action="/auth/reset" method="POST">
                <div class="form-group">
                    <label for="email">Email *</label>
                    <input id="email" name="email" type="email" class="form-control" placeholder="Email" value="" required/>
                </div>
                <div class="form-group">
                    <input type="hidden" name="_csrf" value="{{csrf}}">
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Сбросить" />
                </div>
            </form>
        </div>
    </div>
</div>
