<div class="container-fluid parallax pt-5 min-vh-100">
    <div class="row justify-content-center mt-3">
        <div class="login-form w-50">
            {{#if error}}
                <p class="alert">{{error}}</p>
            {{/if}}
            <h3>Смена пароля</h3>
            <form action="/auth/password" method="POST">
                <div class="form-group">
                    <label for="password">Новый пароль *</label>
                    <input id="password" name="password" type="password" class="form-control" placeholder="Новый пароль" value="" required/>
                </div>
                <div class="form-group">
                    <input type="hidden" name="_csrf" value="{{csrf}}">
                    <input type="hidden" name="userId" value="{{userId}}">
                    <input type="hidden" name="token" value="{{token}}">
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Сменить" />
                </div>
            </form>
        </div>
    </div>
</div>
