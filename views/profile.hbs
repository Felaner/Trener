<div class="container profile">
    <div class="row d-sm-flex d-none">
        <div class="col-12 f-white text-center f-32 font-weight-bold mt-5 mb-5">Личный кабинет</div>
        <div class="col-xl-4 col-lg-5 col-12 mb-lg-0 mb-3">
            <div class="box mx-sm-auto mb-sm-3">
                <div class="f-white ml-3 f-32 profile-name">{{user.name}}</div>
                <input class="d-none f-32 w-100" name="profileName" id="profileName" type="text" value="{{user.name}}">
                <div class="box-images">
                    <img src="{{#if user.Character.image}}{{user.Character.image}}{{else}}/images/icons/PCperson.svg{{/if}}" alt="avatar">
                </div>
            </div>
        </div>
        <div class="col-xl-7 col-lg-6 col-12 offset-lg-1 offset-0 mt-lg-0 mt-5">
            <div class="parameter-wrapper d-flex justify-content-between">
                <div class="parameter f-white f-20">Рост</div>
                {{#if user.Character.growth}}
                    <div class="value f-white f-20"><span class="value-digit">{{user.Character.growth}}</span> см</div>
                {{else}}
                    <div class="value f-white f-20"><span class="value-digit">--</span> см</div>
                {{/if}}
                <input class="d-none" name="growth" id="growth" type="number" value="{{user.Character.growth}}">
            </div>
            <div class="divider mb-3"></div>
            <div class="parameter-wrapper d-flex justify-content-between">
                <div class="parameter f-white f-20">Вес</div>
                {{#if user.Character.weight}}
                    <div class="value f-white f-20"><span class="value-digit">{{user.Character.weight}}</span> кг</div>
                {{else}}
                    <div class="value f-white f-20"><span class="value-digit">--</span> кг</div>
                {{/if}}
                <input class="d-none" name="weight" id="weight" type="number" value="{{user.Character.weight}}">
            </div>
            <div class="divider mb-3"></div>
            <div class="parameter-wrapper d-flex justify-content-between">
                <div class="parameter f-white f-20">Обхват груди</div>
                {{#if user.Character.bust}}
                    <div class="value f-white f-20"><span class="value-digit">{{user.Character.bust}}</span> см</div>
                {{else}}
                    <div class="value f-white f-20"><span class="value-digit">--</span> см</div>
                {{/if}}
                <input class="d-none" name="bust" id="bust" type="number" value="{{user.Character.bust}}">
            </div>
            <div class="divider mb-3"></div>
            <div class="parameter-wrapper d-flex justify-content-between">
                <div class="parameter f-white f-20">Обхват талии</div>
                {{#if user.Character.waist}}
                    <div class="value f-white f-20"><span class="value-digit">{{user.Character.waist}}</span> см</div>
                {{else}}
                    <div class="value f-white f-20"><span class="value-digit">--</span> см</div>
                {{/if}}
                <input class="d-none" name="waist" id="waist" type="number" value="{{user.Character.waist}}">
            </div>
            <div class="divider mb-3"></div>
            <div class="parameter-wrapper d-flex justify-content-between">
                <div class="parameter f-white f-20">Обхват бедер</div>
                {{#if user.Character.girth}}
                    <div class="value f-white f-20"><span class="value-digit">{{user.Character.girth}}</span> см</div>
                {{else}}
                    <div class="value f-white f-20"><span class="value-digit">--</span> см</div>
                {{/if}}
                <input class="d-none" name="girth" id="girth" type="number" value="{{user.Character.girth}}">
            </div>
            <div class="divider mb-3"></div>
            <div class="row justify-content-around">
                <button class="button edit-profile-img mb-3">Изменить фото</button>
                <button class="button edit-profile">Редактировать профиль</button>
                <button class="button save-profile d-none">Сохранить изменения</button>
            </div>
            {{#if user.course}}
                <div class="profile-status mt-5">
                    <div class="parameter-wrapper d-flex justify-content-between">
                        <div class="parameter f-white f-20">Уровень сложности:</div>
                        <div class="f-white f-20">новичок</div>
                    </div>
                    <div class="divider mb-4"></div>
                    <div class="parameter-wrapper d-flex justify-content-between">
                        <div class="parameter f-white f-20">Дата:</div>
                        <div class="f-white f-20">12.12.2021/12.12.2022</div>
                    </div>
                    <div class="divider"></div>
                </div>
            {{else}}
                <p class="text-center w-100 f-20 f-white mt-3">У вас нет купленных курсов</p>
            {{/if}}
        </div>
    </div>
